<p id="notice"><%= notice %></p>

<h1>Event Items</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Item</th>
      <th>Assigned person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_items.each do |event_item| %>
      <tr>
        <td><%= event_item.event_id %></td>
        <td><%= event_item.item_id %></td>
        <td><%= event_item.assigned_person_id %></td>
        <td><%= link_to 'Show', event_item %></td>
        <td><%= link_to 'Edit', edit_event_item_path(event_item) %></td>
        <td><%= link_to 'Destroy', event_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

