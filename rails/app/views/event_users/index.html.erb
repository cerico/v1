<p id="notice"><%= notice %></p>

<h1>Event Users</h1>

<table>
  <thead>
    <tr>
      <th>Invited event</th>
      <th>Guest</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_users.each do |event_user| %>
      <tr>
        <td><%= event_user.invited_event_id %></td>
        <td><%= event_user.guest_id %></td>
        <td><%= event_user.status %></td>
        <td><%= link_to 'Show', event_user %></td>
        <td><%= link_to 'Edit', edit_event_user_path(event_user) %></td>
        <td><%= link_to 'Destroy', event_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

